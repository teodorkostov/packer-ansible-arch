{
  "variables": {
    "time_zone": "Europe",
    "time_subzone": "Amsterdam"
  },
  "builders":
  [
    {
      "type": "qemu",
      "qemuargs": [
        ["-serial", "none"],
        ["-parallel", "none"],
        ["-nodefaults"],
        ["-nodefconfig"],
        ["-no-user-config"],
        ["-enable-kvm"],
        ["-name", "Packer"],
        ["-cpu", "host,kvm=off"],
        ["-smp", "sockets=1,cores=2,threads=1"],
        ["-m", "2048M"],
        ["-mem-prealloc"],
        ["-machine", "pc,accel=kvm,kernel_irqchip=on,mem-merge=off"],
        ["-net", "nic,model=virtio"],
        ["-net", "bridge,br=bridge0"],
        ["-drive", "if=pflash,format=raw,file=output/arch.bin"],
        ["-drive", "if=virtio,id=drive0,file=temp/arch.raw,format=raw,cache=none,aio=native"],
        ["-vga", "qxl"],
        ["-display", "sdl"]
      ],
      "iso_url": "images/archlinux-x86_64.iso",
      "iso_checksum": "aeed1a62fe2d812715a121ca93866995",
      "iso_checksum_type": "md5",
      "output_directory": "temp",
      "disk_size": 33800,
      "disk_interface": "virtio",
      "format": "raw",
      "headless": false,
      "accelerator": "kvm",
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "s0m3password",
      "ssh_port": 22,
      "ssh_wait_timeout": "30s",
      "vm_name": "arch.raw",
      "net_device": "virtio-net",
      "boot_wait": "3s",
      "boot_command": [
        "<enter><wait16s>",
        "passwd<enter>s0m3password<enter>s0m3password<enter><wait>",
        "systemctl start sshd<enter><wait>"
      ],
      "shutdown_timeout": "30s",
      "shutdown_command": "shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "resources/initial.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "resources/arch-playbook.yaml",
      "inventory_file": "resources/arch-playbook.inventory",
      "playbook_paths": ["resources/private"],
      "extra_arguments": [
        "--extra-vars 'time_zone={{user `time_zone`}} time_subzone={{user `time_subzone`}}'"
      ]
    },
    {
      "type": "file",
      "source": "resources/uefi-loader.conf",
      "destination": "/mnt/boot/loader/loader.conf"
    },
    {
      "type": "file",
      "source": "resources/uefi-entry.conf",
      "destination": "/mnt/boot/loader/entries/arch.conf"
    },
    {
      "type": "file",
      "source": "resources/pacman.conf",
      "destination": "/mnt/etc/pacman.conf"
    }
  ],
  "post-processors": [
    [
      {
        "type": "shell-local",
        "inline": [
          "mv temp/arch.raw output/arch.raw",
          "rm -rf temp"
        ]
      }
    ]
  ]
}
