{
  "variables": {
    "admin_username": "admin",
    "time_zone": "Europe",
    "time_subzone": "Amsterdam"
  },
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "images/archlinux-x86_64.iso",
      "iso_checksum": "aeed1a62fe2d812715a121ca93866995",
      "iso_checksum_type": "md5",
      "output_directory": "output",
      "disk_size": 33800,
      "disk_interface": "virtio-scsi",
      "format": "raw",
      "headless": false,
      "accelerator": "kvm",
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "s0m3password",
      "ssh_port": 22,
      "ssh_wait_timeout": "30s",
      "vm_name": "arch.raw",
      "net_device": "virtio-net",
      "boot_wait": "3s",
      "boot_command": [
        "<enter><wait16s>",
        "passwd<enter>s0m3password<enter>s0m3password<enter><wait>",
        "systemctl start sshd<enter><wait>"
      ],
      "shutdown_timeout": "30s",
      "shutdown_command": "shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "resources/initial.sh"
    },
    {
      "type": "file",
      "source": "resources/uefi-loader.conf",
      "destination": "/mnt/boot/loader/loader.conf"
    },
    {
      "type": "file",
      "source": "resources/uefi-entry.conf",
      "destination": "/mnt/boot/loader/entries/arch.conf"
    },
    {
      "type": "file",
      "source": "resources/pacman.conf",
      "destination": "/mnt/etc/pacman.conf"
    },
    {
      "type": "ansible-local",
      "playbook_file": "resources/arch-playbook.yaml",
      "inventory_file": "resources/arch-playbook.inventory",
      "extra_arguments": [
        "--extra-vars 'time_zone={{user `time_zone`}} time_subzone={{user `time_subzone`}}'"
      ]
    }
  ]
}
